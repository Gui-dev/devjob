{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": {
          "level": "error",
          "fix": "safe"
        }
      },
      "recommended": true,
      "correctness": {
        "noUnusedImports": {
          "level": "warn"
        }
      }
    }
  }
}
