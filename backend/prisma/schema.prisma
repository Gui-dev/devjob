generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CANDIDATE
  RECRUITER
}

enum JobType {
  REMOTE
  ONSITE
  HYBRID
}

enum JobLevel {
  JUNIOR
  PLENO
  SENIOR
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CANDIDATE)
  createdAt DateTime @default(now()) @map("created_at")
  Job       Job[]

  @@map("users")
}

model Job {
  id           String   @id @default(cuid())
  recruiterId  String   @map("recruiter_id")
  title        String
  description  String
  company      String
  location     String
  type         JobType
  level        JobLevel
  technologies String[]
  createdAt    DateTime @default(now()) @map("created_at")

  recruiter User @relation(fields: [recruiterId], references: [id])

  @@map("jobs")
}
